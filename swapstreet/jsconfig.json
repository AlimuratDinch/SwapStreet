// jsconfig.json enables absolute imports (like @/components/...)
{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"],
        "@/components/*": ["./components/*"],
        "@/lib/*": ["./lib/*"],
        "@/app/*": ["./app/*"]
      }
    },
    "exclude": ["node_modules", ".next"]
  }